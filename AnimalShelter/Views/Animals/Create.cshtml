@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h4>Add Animal</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Type)
    @Html.TextBoxFor(model => model.Type)
    <input type="submit" value="Animal type" />
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <input type="submit" value="Name" />
    @Html.LabelFor(model => model.Gender)
    @Html.TextBoxFor(model => model.Gender)
    <input type="submit" value="Gender" />
    @Html.LabelFor(model => model.Date)
    @Html.TextBoxFor(model => model.Date)
    <input type="submit" value="Date" />
    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)
    <input type="submit" value="Breed" />
}
<p>@Html.ActionLink("Show all details", "Index")</p>